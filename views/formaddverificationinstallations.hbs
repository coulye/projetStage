{{#content "page"}}
    <script>
        //<![CDATA[
        $(document).ready(function(){
            $("[data-mask]").inputmask();

            $('#type_installation').on('change',function(evt){
                var valueInstallation = $('#type_installation').val();
                $.get('/getInstallation'+valueInstallation, function(data){
                    for(var i = 0; i < data.length; i++){
                        $('#numero_installation').append("<option value="+data[i].numero+">"+data[i].numero+"</option>")
                    }
                })
            });

        });
    </script>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Formulaire de mise à jour des installations
            </h1>
            <ol class="breadcrumb">
                <li><a href="/index"><i class="fa fa-home"></i> Accueil</a></li>
                <li><a href="/hscti_registresecuincendie"><i class="fa fa-angle-left"></i> Menu Principal RSI</a></li>
                <li><a href="/btnaddverificationsuivi"><i class="fa fa-angle-left"></i> Menu vérification et suivi RSI</a></li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-12">

                    <!-- About Me Box -->
                    <div class="box box-primary">
                        <div class="box-body">
                            <form class="form-horizontal" role="form" method="POST" accept-charset="utf-8" action="/postverificationinstallation">
                                <div class="form-group">
                                    <label for="inputName" class="col-sm-2 control-label">Type d'installation</label>
                                    <div class="col-sm-2">
                                        <select class="form-control" id="type_installation" name="type" required="required">
                                            <option value="" disabled selected>Choisir un type d'installation</option>
                                            <option value="Extincteur">Extincteur</option>
                                            <option value="Ria">Réseau Incendie Armé</option>
                                            <option value="Alarme">Système alarme et alerte</option>
                                            <option value="Eclairage">Eclairage de sécurité</option>
                                            <option value="SystemeSecurite">Système de sécurité</option>
                                            <option value="Autre">Autres moyens de sécurité</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputName" class="col-sm-2 control-label">Installations</label>
                                    <div class="col-sm-2">
                                        <select class="form-control" id="numero_installation" name="numero" required="required">
                                                <option value="" disabled selected>Choisir le numéro de l'installation</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="observation" class="col-sm-2 control-label">Observation</label>
                                    <div class="col-xs-10 col-sm-10">
                                        <input class="form-control" placeholder="observation" type="text" id="observation_verification" name="observation" value="" required="required" autofocus/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="date" class="col-sm-2 control-label">Date de vérification</label>
                                    <div class="col-xs-10 col-sm-10">
                                        <input class="form-control" placeholder="date" type="date" id="date_verification" name="date" value="" required="required" autofocus/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="Entreprises_extId" class="col-sm-2 control-label">Entreprise de contrôle</label>
                                    <div class="col-xs-10 col-sm-10">
                                        <input class="form-control" placeholder="Entreprise de contrôle" type="vérificateur" id="entreprise_verification" name="Entreprises_extId" value="5b19227e57b6c5d729000002" required="required" autofocus/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="visa" class="col-sm-2 control-label">Visa</label>
                                    <div class="col-xs-10 col-sm-10">
                                        <input class="form-control" placeholder="visa" type="text" id="visa_verification" name="visa" value="" required="required" autofocus/>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <a class="col-xs-12 col-sm-2">
                                        {{#if result.one}}
                                            <input type="hidden" name="_id" value="{{result.one._id}}"/>
                                        {{/if}}
                                        <!--<a class="btn btn-primary" href="/formaddregistreetape2" role="button">suivant</a>-->
                                        <a class="btn btn-primary"><input type="submit" value="Envoyer le formulaire"></a>
                                    </a>
                                </div>
                            </form>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div><!-- /.col -->
            </div>
        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->

{{/content}}
{{#content "footer"}}
    {{> footer}}
{{/content}}