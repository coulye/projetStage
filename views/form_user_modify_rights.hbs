                                        {{/each}}
                                    </div>

                                </div>

                                <hr>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        {{#if result}}
                                            <input type="hidden" name="_id" value="{{result.Accounts._id}}"/>
                                        {{/if}}
                                        <button type="submit" name="button" id="button" class="btn btn-primary">Enregistrer</button>
                                    </div>
                                </div>
                            </form>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div><!-- /.col -->

            </div><!-- /.row -->
        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->

{{/content}}
